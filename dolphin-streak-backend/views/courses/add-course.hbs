{{#> layout title="Add Course"}}

<div class="flex">
    {{> sidebar}}
    <div class="flex-1 p-6 bg-gray-100 overflow-auto">
        <div class="form-wrapper bg-white rounded-lg p-8 shadow-lg">
            <div class="form-header text-center mb-6">
                <h1 class="text-2xl font-bold text-[#0e88bc]">Create New Course</h1>
            </div>
            <form action="/courses/add" method="POST" class="space-y-4">
                <div class="form-row flex flex-col md:flex-row gap-4">
                    <div class="form-group w-full md:w-1/2">
                        <label for="title" class="block text-gray-700 font-bold mb-2">Title</label>
                        <input type="text" id="title" name="title" placeholder="Enter course title"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            required>
                    </div>
                </div>
                <div class="form-row flex flex-col md:flex-row gap-4">
                    <div class="form-group w-full md:w-1/2">
                        <label for="level" class="block text-gray-700 font-bold mb-2">Level</label>
                        <select id="level" name="level"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            required>
                            <option value="Beginner">Beginner</option>
                            <option value="Intermediate">Intermediate</option>
                            <option value="Advanced">Advanced</option>
                            <option value="Expert">Expert</option>
                        </select>
                    </div>
                    <div class="form-group w-full md:w-1/2">
                        <label for="language" class="block text-gray-700 font-bold mb-2">Language</label>
                        <select id="language" name="language"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            required>
                            <option value="English">English</option>
                            <option value="Chinese">Chinese</option>
                            <option value="Indonesian">Indonesian</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="block text-gray-700 font-bold mb-2">Available Languages</label>
                        <div class="flex flex-col gap-2">
                            <div class="checkbox-container flex items-center">
                                <input type="checkbox" name="availableLanguages" value="Chinese" id="chinese"
                                    class="mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <label for="chinese" class="text-gray-700">Chinese</label>
                            </div>
                            <div class="checkbox-container flex items-center">
                                <input type="checkbox" name="availableLanguages" value="English" id="english"
                                    class="mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <label for="english" class="text-gray-700">English</label>
                            </div>
                            <div class="checkbox-container flex items-center">
                                <input type="checkbox" name="availableLanguages" value="Indonesian" id="indonesian"
                                    class="mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <label for="indonesian" class="text-gray-700">Indonesian</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="thumbnail" class="block text-gray-700 font-bold mb-2">Thumbnail</label>
                        <input type="file" id="thumbnail" name="thumbnail"
                            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                            required>
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit"
                        class="submit-btn w-full py-3 bg-[#0e88bc] hover:bg-blue-500 rounded text-white">Add
                        Course</button>
                </div>
            </form>
            <div class="mt-4">
                <a href="/courses">
                    <button type="button"
                        class="back-btn w-full py-3 bg-transparent hover:bg-[#0e88bc] hover:text-white rounded text-[#0e88bc] flex items-center justify-center gap-2">
                        <i class="fas fa-arrow-left"></i> Back
                    </button>
                </a>
            </div>
        </div>
    </div>
</div>
{{/layout}}
