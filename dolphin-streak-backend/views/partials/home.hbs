      </div>
    </div>
  </div>


  <script>
    const ctx = document.getElementById('pieChart').getContext('2d');
    const data = [
      { value: 73, color: '#a05195' }, // Chinese
      { value: 18, color: '#2f4b7c' }, // Japanese
      { value: 9, color: '#003f5c' },   // German
    ];
    let startAngle = -0.5 * Math.PI;
    data.forEach(item => {
      const endAngle = startAngle + (item.value / 100) * 2 * Math.PI;
      ctx.beginPath();
      ctx.moveTo(20, 20); // Center of the pie chart
      ctx.arc(20, 20, 20, startAngle, endAngle);
      ctx.fillStyle = item.color;
      ctx.fill();
      startAngle = endAngle;
    });
  </script>
