<html>
  <head>
    <meta charset='utf-8' />
    <title>{{title}}</title>
    <script src='https://cdn.tailwindcss.com'></script>
  </head>
    <div class='bg-[#0288d1] min-h-screen flex items-center justify-center p-4'>
    <div class='w-full max-w-md'>
  <!-- Logo -->
  <div class='flex justify-center mb-12'>
    <div class='bg-[#4fc3f7] rounded-full p-4 relative'>
      <div
        class='absolute inset-0 bg-[#81d4fa] rounded-full transform -translate-x-1/2 left-1/2 scale-[1.3] -z-10'
      ></div>
      <svg class='w-24 h-24' viewBox='0 0 100 100'>
        <path
          d='M50 10 C30 10, 10 30, 10 50 C10 70, 30 90, 50 90 C70 90, 90 70, 90 50 C90 30, 70 10, 50 10'
          class='fill-[#4fc3f7]'
        />
        <path
          d='M35 45 Q50 25 65 45 Q80 65 50 75 Q20 65 35 45'
          class='fill-white'
          stroke='white'
          stroke-width='1'
        />
        <circle cx='40' cy='35' r='2' class='fill-white' />
      </svg>
    </div>
  </div>

  <form class='space-y-8 px-6'>
    <div>
      <label class='block text-white mb-3 text-sm font-light'>Email Address</label>
      <input
        type='email'
        class='w-full px-6 py-4 rounded-full bg-[#e3b5b5]/30 text-white placeholder-white/70 focus:outline-none'
        placeholder='Placeholder text'
        required
      />
    </div>

    <div>
      <label class='block text-white mb-3 text-sm font-light'>Password</label>
      <input
        type='password'
        class='w-full px-6 py-4 rounded-full bg-[#e3b5b5]/30 text-white placeholder-white/70 focus:outline-none'
        placeholder='•••••••'
        required
      />
    </div>

    <div class='flex justify-end pt-4'>
      <button
        type='submit'
        class='px-10 py-3 rounded-full bg-[#e3b5b5]/30 text-white text-lg font-light hover:bg-[#e3b5b5]/40 focus:outline-none transition duration-200'
      >
        Login
      </button>
    </div>
  </form>
</div>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const currentPath = window.location.pathname;
        if (!localStorage.getItem('accesstoken') && currentPath !== '/login') {
          window.location.href = '/login';
        }
      });
    </script>
  </body>
</html>